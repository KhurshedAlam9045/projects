<div class="row p-5">
    <!--Starting of form card-->
    @*<div class="col-sm-2"></div>*@
    <div class="col-sm-5 card text-bg-light">
        <div class="card-body">
            <h4 class="card-title text-center" style=" color:#c6003d;"><b>Our Success Stories </b></h4>
            <form method="post" enctype="multipart/form-data">

                <div class="row g-3 mt-3">
                    <div class="col">
                        <label for="exampleInputEmail">Student Name:</label>
                        <input type="text" class="form-control" aria-label="First name" required name="name" placeholder="Enter Your Name...">
                    </div>
                    <div class="col">
                        <label for="exampleInputEmail">College of Student:</label>
                        <input type="text" class="form-control" placeholder="Enter Your College Name..." aria-label="Last name" required  name="collegename">
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col">
                        <label for="exampleInputEmail">Course Name:</label>
                        <input type="text" class="form-control" aria-label="First name" required  name="course" placeholder="Enter Your Course Name...">
                    </div>
                    <div class="col">
                        <label for="exampleInputEmail">Company Name:</label>
                        <input type="text" class="form-control" placeholder="Enter Your College Name..." aria-label="Last name" required name="companyname">
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col">
                        <label for="exampleInputEmail">Post:</label>
                        <input type="text" class="form-control" aria-label="First name" required name="post" placeholder="Post...">
                    </div>
                    <div class="col">
                        <label for="exampleInputEmail">Field:</label>
                        <input type="text" class="form-control" placeholder="field..." aria-label="Last name" required  name="field">
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col">
                        <label for="exampleInputEmail">Package:</label>
                        <input type="number" class="form-control" aria-label="First name" required  name="package" placeholder="Package...">
                    </div>
                    <div class="col">
                        <label for="exampleInputEmail">Company Logo:</label>
                        <input type="file" class="form-control" placeholder="Company..." aria-label="Last name" required  name="companylogo">
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 mt-3">
                        <label for="exampleInputEmail">Student Pic:</label>
                        <input type="file" class="form-control" placeholder="Company..." aria-label="Last name" required  name="studentpic">

                    </div>
                </div>

                <input type="submit" class="btn btn-success mt-4" style="background:#c6003d;" value="ADD NOW" />

            </form>
        </div>
    </div>

