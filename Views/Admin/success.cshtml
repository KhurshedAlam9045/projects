    <div class="col-sm-7  card text-center">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>college</th>
                        <th>course</th>
                        <th>company</th>
