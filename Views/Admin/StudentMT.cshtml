
@{
    ViewBag.Title = "StudentMT";
    Layout = "~/Views/Shared/admin.cshtml";
}
<style>
    .main {
        /*background-image: url("~/Content/image/govt.gonda.jpg");*/
        background-image: url('../../content/image/govt.gonda.jpg');
        background-repeat: no-repeat;
        background-size: 100%;
        padding: 75px 0px;
    }
.form-box{
    background-color:rgba(255,255,255,0.5);
    backdrop-filter:blur(30px);
    border-radius:20px;
    border:1px solid white;


}
.form-box input{
    border-radius:10px;

}
    .form-box select:focus{
        border-radius: 10px;
        box-shadow:0 0 0;
        border:1px solid #f6288c;
    }
    .form-group-text{
        border-radius:0px 10px 10px 0px;
    }
    .register-btn{
        background-image:linear-gradient(to right,#63118b,#f80f88,#f80f88);
        border:none;
        border-radius:10px;
        color:white;
    }
    .link{
        text-decoration:none;
        color:#63118b;

    }
        .link:hover {
            color: #f80f88;
        }
</style>


<section class="main">
    <div class="container">
         <div class="row">
             <div class="col-lg-7 col-md-12">
                 <div class="text">
                     <h1 class="text-white">Create  Your Best Experience!</h1>
                     <h2 class="text-white">By Becoming a part of copany family</h2>
                 </div>
             </div>
             <div class="col-lg-5 col-md-10 col-sm-12">
                 <div class="form-box px-5 py-5">

                     <form>
                         <h2 class="text-center mb-4">Register Now</h2>
                         <input type="text" required name="" placeholder="Name....." class="form-control mb-3" />
                         <input type="email" required name="" placeholder="Email....." class="form-control mb-3" />
                         <select class="form-select mb-3" required>
                             <option>City</option>
                             <option>Padruana</option>
                         </select>
                         <input type="number"name="" placeholder="Contact No...." class="form-control mb-3" required/>
                         <div class="input-group mb-3">
                             <input type="password" name="" placeholder="Password...." class="form-control border-end-0" required/>
                             <span class="input-group-text bg-white border-start-0"><i class="fa-solid fa-eye"></i></span>
                         </div>
                         <div class="mb-3">
                             <input type="checkbox" name="" />
                             <label><small>By Signing up, i agree to<a href="#" class="link"><b> Term and Conditions</b></a></small></label>
                         </div>
                         <button class="register-btn form-control mb-3">Register</button>
                         <p class="text-center">Already A member<a href="#" class="link"><b> Log in</b></a></p>
                     </form>
                 </div>
             </div>
         </div>
    </div>
</section>


