
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/admin.cshtml";
}

@*<h2>ChangePassword</h2>*@

<div class="row p-5 ">
    <div class="col-sm-4 bg-light rounded-4">
        <form>
            @*[formGroup]="form"*@

            <h4 class="text-center" style=" color:#c6003d;">Change Password<b><i class="fa-solid fa-key"></i></b></h4>
            <div class="form-group mt-3">
                <label for="old_password">Old Password</label>
                
                <input id="old_password" name="old_password" type="password" class="form-control" formControlName="old_password">

            </div>
            <div class="form-group mt-3">
                <label for="password">New Password</label>
                <input  id="new_password"  type="password" class="form-control" formControlName="new_password">      

            </div>
            <div class="form-group mt-3">
                <label for="password">Confirm Password</label>
                <input  id="confirm_password" type="password" class="form-control" formControlName="confirm_password"> 

            </div>
            <button class="btn btn-info mt-3" type="submit">Change Now</button>
        </form>
    </div>
</div>







