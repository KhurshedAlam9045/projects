
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Student.cshtml";
}


<style>
    .dash {
        height: 180px;
    }
</style>

<div class="row">
    <div class="text-center fs-2">
        Dashboard Box<b class="text-warning"><i class="fa-solid fa-bars"></i></b>
    </div>
    <div class="col-sm-9 mx-auto">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-user mt-5 fs-2"></i><br /><br />
                    <a href="/Student/profile"> Update your Profile</a>
                </p>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-video mt-5 fs-2"></i><br /><br />
                   <a href="/Student/lecture"> Videos & Codes</a>
                </p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-briefcase-clock mt-5 fs-2"></i><br /><br />
                    Today's Task
                </p>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-file-pdf mt-5 fs-2"></i><br /><br />
                      <a href="/Student/assignment"> Assignment/Task</a>
                </p>
            </div>
           <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-key mt-5 fs-2"></i><br /><br />
                     <a href="/Student/changapassword">Change Password</a>
                </p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <p class="bg-light text-center dash rounded">
                    <i class="fa-solid fa-user mt-5 fs-2"></i><br /><br />
                    Logout
                </p>
            </div>
           

        </div>
    </div>
        <div class="col-sm-3">


            <div class="row">
                @{
                    if (ViewBag.link != null)
                    {
                        if (ViewBag.link.Rows.Count > 0)
                        {


                            <div class="col-sm-2 text-bg-light rounded mx-auto mt-3" style="height:250px; width:350px;">
                                <i class="fa fa-video ps-1 fs-1" style="margin-left:45%; margin-top:20px;"></i><br />
                                <center>
                                    <b>Your Main Batch:Free Course</b><br />
                                    <div class="rounded rounded-5 text-bg-warning fs-4 mt-3" style="width:60%;">Click to join class</div><br />
                                    Class Timing:@ViewBag.link.Rows[0][4]-@ViewBag.link.Rows[0][5]<br />
                                    Added On:@ViewBag.link.Rows[0][4]<br />
                                    Note:Free Java Live Classes

                                </center>
                            </div>

                            <div class="col-sm-2 text-bg-light rounded mx-auto mt-3" style=" height:400px; width:350px;">
                                <center>
                                    <img src="~/Content/image/thar2.jpg" style="height:150px;width:150px;border-radius:100px;margin-top:20px;" />
                                    <h3 class="mt-3">Khurshed Alam <i class="fa-regular fa-circle-check  text-warning rounded-5"></i></h3>
                                    <p style="color:silver;">Diploma(C.S)-Second</p>
                                    <i class="fa-brands fa-facebook fs-1 text-bg-secondary rounded rounded-2"></i>&nbsp;&nbsp;
                                    <i class="fa-brands fa-twitter fs-1 text-bg-info rounded rounded-2"></i>&nbsp;&nbsp;
                                    <i class="fa-brands fa-linkedin-in fs-1 text-bg-primary rounded rounded-2"></i>&nbsp;&nbsp;
                                    <i class="fa-brands fa-youtube fs-1 text-bg-danger rounded rounded-2"></i><br /><br />
                                    <p style="color:silver;">Fee : 0 .&nbsp;&nbsp;Submitted : 0</p>
                                    <p style="color:black;">Go to Profile</p>
                                </center>
                            </div>



                        }
                    }


                }
            </div>

        </div>

           
</div>
