
@{
    ViewBag.Title = "lecture";
    Layout = "~/Views/Shared/Student.cshtml";
}
<h2 class="text-center"><i class="fa fa-person"></i>Choose Categoery</h2>
<div class="row mt-3" style="padding:3%;">
    @{
        if (ViewBag.vcat != null)
        {
            if (ViewBag.vcat.Rows.Count > 0)
            {
                foreach (var cat in ViewBag.vcat.Rows)
                {


                    <div class="col-sm-2" style="padding:1%;">
                        <div class="card">
                            <a href="~/Student/videos/?cid=@cat[0]">
                          
                            <img src="~/Content/caticons/@cat[2]" class="card-img-top" style="height:100px;" alt="...." />
                            <div class="card-body">
                                <p class="card-text text-center text-danger"><b>@cat[1]</b></p>
                            </div>
                            </a>
                        </div>
                    </div>

                }
            }
            else
            {
                <center>

                    <div class="alert alert-danger d-flex align-items-center col-sm-8" style="max-height:100px;" role="alert">
                        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                        <div>
                            No Video Category is added by Admin till Now. Please wait ......<br />
                            
                        </div>
                    </div>
                </center>
            }
        }

    }
</div>