
@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/Student.cshtml";
}

<h2 class="text-center text-danger mt-4">Added Videos</h2>
<div class="row">
    <div class="col-sm-2"></div>
    @{
        if (ViewBag.Video != null)
        {
            if (ViewBag.Video.Rows.Count > 0)
            {
                foreach (var v in ViewBag.Video.Rows)
                {
                    <div class="col-sm-8">

                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <video height="160px" style="width:100%" controls>
                                        <source src="~/Content/videos/@v[5]" type="video/ogg"/>
                                    </video>

                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@v[5]</h5>
                                        <p class="card-text">@v[4]</p>
                                        <p class="card-text"><small class="text-body-secondary">Added on: @v[6]</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        }
    }
</div>

